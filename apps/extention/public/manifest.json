{
    "manifest_version": 3,
    "name": "YT Live Translator",
    "version": "0.0.1",
    "permissions": [
    "tabs", "tabCapture", "nativeMessaging", "offscreen"],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://youtu.be/*"
    ],
    "action": { "default_title": "YT Live Translator" },
    "background": { "service_worker": "background.js" }
}
