<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="720" d:DesignHeight="420"
        x:Class="YtLiveTranslator.Desktop.MainWindow"
        Title="YT Live Translator">
    <StackPanel Margin="16" Spacing="12">
        <TextBlock x:Name="StatusText"
                   Text="Status: Idle"
                   FontSize="16" />
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button x:Name="StartButton" Content="Start" Click="StartButton_OnClick" />
            <Button x:Name="StopButton" Content="Stop" Click="StopButton_OnClick" />
        </StackPanel>
    </StackPanel>
</Window>
